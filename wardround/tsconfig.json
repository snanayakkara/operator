{
  "extends": "../tsconfig.node.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "../dist-wardround",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules", "../dist", "../dist-wardround"]
}
