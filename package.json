{
  "name": "reflow-medical-assistant",
  "version": "2.5.1",
  "description": "Unified medical assistant Chrome extension combining Reflow2 AI agents with Xestro EMR automation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-with-types": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest",
    "test:e2e": "npx playwright test",
    "test:e2e:verbose": "node run-e2e-tests.js --verbose",
    "validate:production": "npm run build && npm run type-check && npm run lint:src",
    "validate:full": "npm run build && npm run type-check && npm run lint:src && npm run test:e2e",
    "lint:src": "eslint src/**/*.{ts,tsx} --max-warnings 30"
  },
  "dependencies": {
    "@xenova/transformers": "^2.10.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-loading-indicators": "^1.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/chrome": "^0.0.258",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "playwright": "^1.54.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "terser": "^5.43.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^5.0.8",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "medical",
    "ai",
    "chrome-extension",
    "healthcare",
    "dictation",
    "emr"
  ],
  "author": "Medical AI Assistant Team",
  "license": "MIT"
}
